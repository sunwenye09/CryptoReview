<% layout('layouts/boilerplate')%>
    <div id="cluster-map"></div>
    <div class="container">
        <h1>All Projects</h1>

        <% for (let project of allProjects){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <%if(project.images.length) {%>
                            <img class="img-fluid" alt="" src="<%=project.images[0].url%>">
                            <% }else {%>
                                <img class="img-fluid" alt=""
                                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= project.title %>
                            </h5>

                            <p class="card-text">
                                <%= project.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= project.location%>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="/project/<%=project._id%>">View
                                <%=project.title%>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
    </div>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const allProjects = { features: JSON.stringify(allProjects) };
    </script>

    <script src="/javascripts/clusterMap.js"></script>